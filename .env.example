# MongoDB (required for admin data)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=Cluster0

# JWT for admin login
JWT_SECRET=your-jwt-secret

# Admin credentials (optional override)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=admin123

# SMTP (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=ISMIGS <your@gmail.com>

# OpenAI (required for test emails and digest: sector LinkedIn posts)
# Get a key at https://platform.openai.com/api-keys
# If deploying to Vercel: set this in Project Settings â†’ Environment Variables for the backend.
OPENAI_API_KEY=sk-your-openai-api-key
# OPEN_AI_API_KEY_ADMIN: optional fallback when OPENAI_API_KEY is unset or returns 401
# OPEN_AI_API_KEY_ADMIN=sk-...

# Energy disclosure + n8n (optional)
# N8N_WEBHOOK_URL=https://your-n8n-instance/webhook/...
# CRON_SECRET=your-secret-for-cron-endpoint
# FRONTEND_BASE_URL (or FRONTEND_PUBLIC_URL): required in production. Set to your deployed frontend URL (e.g. https://your-frontend.vercel.app). Without it, Yes/No redirects return 503.
# FRONTEND_BASE_URL=https://your-frontend.vercel.app
# BACKEND_PUBLIC_URL: used for Yes/No links in the disclosure email. On Vercel can be left unset (backend uses VERCEL_URL).
# BACKEND_PUBLIC_URL=https://your-backend.vercel.app
# ENERGY_RISK_THRESHOLD=40
# MOSPI_API_BASE=https://api.mospi.gov.in/api

PORT=3001
