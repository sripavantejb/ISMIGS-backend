# MongoDB (required for admin data)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=Cluster0

# JWT for admin login
JWT_SECRET=your-jwt-secret

# Admin credentials (optional override)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=admin123

# SMTP (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=ISMIGS <your@gmail.com>

# OpenAI (for email digest: LinkedIn-style post from insights + warnings)
OPENAI_API_KEY=sk-your-openai-api-key

# Approval flow: base URL for the link in digest emails (e.g. https://ismigs-frontend.vercel.app)
# Links are built as: {APPROVAL_BASE_URL}/approve?token={token}
APPROVAL_BASE_URL=https://ismigs-frontend.vercel.app

# Optional: when a recipient approves a post, backend POSTs the approved content to this URL (for LinkedIn publishing)
# If unset, approval still works but no webhook is called.
# LINKEDIN_WEBHOOK_URL=https://your-webhook.example.com/linkedin

PORT=3001
